<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.ua.dlsi.im3.mavr.gui.MainController">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleOpen" text="Open file">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="O" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                           </accelerator>
                        </MenuItem>
                    <MenuItem mnemonicParsing="false" text="Close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Delete" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
              <tabs>
                  <Tab text="Genetics">
                     <content>
                        <BorderPane fx:id="borderPaneGenetics" prefHeight="200.0" prefWidth="200.0">
                           <left>
                              <Button fx:id="btnRunGenetics" mnemonicParsing="false" onAction="#handleComputeGenetics" text="Run" BorderPane.alignment="CENTER">
                                 <BorderPane.margin>
                                    <Insets top="10.0" />
                                 </BorderPane.margin>
                              </Button>
                           </left>
                        </BorderPane>
                     </content>
                  </Tab>
                  <Tab text="Distances">
                     <content>
                        <BorderPane fx:id="borderPaneDistances" prefHeight="200.0" prefWidth="200.0">
                           <top>
                              <GridPane BorderPane.alignment="CENTER">
                                <columnConstraints>
                                  <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                </columnConstraints>
                                <rowConstraints>
                                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                </rowConstraints>
                                 <children>
                                    <Label text="From chord" />
                                    <Label text="To chord" GridPane.rowIndex="2" />
                                    <TextField fx:id="inputFromChord" prefHeight="27.0" prefWidth="406.0" text="G B D F" GridPane.columnIndex="1" />
                                    <TextField fx:id="inputToChord" text="C E G" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                    <Button mnemonicParsing="false" onAction="#handleComputeChordDistance" text="Compute" GridPane.rowIndex="4" />
                                    <Label text="To key" GridPane.rowIndex="3" />
                                    <Label text="From key" GridPane.rowIndex="1" />
                                    <TextField fx:id="inputFromKey" text="C major" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                    <TextField fx:id="inputToKey" text="C major" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                    <Label fx:id="labelTPSDistance" text="TPS DISTANCE=" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                    <ColorPicker fx:id="colorPickerFromChord" GridPane.columnIndex="2" />
                                    <CheckBox fx:id="cbFixSaturation" disable="true" mnemonicParsing="false" selected="true" text="Fix saturation" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                                    <CheckBox fx:id="cbFixBrightness" disable="true" mnemonicParsing="false" selected="true" text="Fix brightness" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                                    <CheckBox fx:id="cbFixHue" disable="true" mnemonicParsing="false" text="Fix hue" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                                    <ColorPicker fx:id="colorPickerToChord" GridPane.columnIndex="2" GridPane.rowIndex="4" />
                                 </children>
                              </GridPane>
                           </top>
                        </BorderPane>
                     </content>
                  </Tab>
                  <Tab fx:id="tabMotives4" onSelectionChanged="#handleMotivesOpened" text="COLORS">
                     <content>
                        <BorderPane prefHeight="200.0" prefWidth="200.0">
                           <top>
                              <HBox fx:id="keyColorsHBox" prefHeight="100.0" prefWidth="200.0" spacing="20.0" BorderPane.alignment="CENTER" />
                           </top>
                           <center>
                              <HBox fx:id="hboxChords" prefHeight="100.0" prefWidth="200.0" spacing="20.0" BorderPane.alignment="CENTER" />
                           </center>
                           <bottom>
                              <HBox fx:id="hboxProgression" prefHeight="100.0" prefWidth="200.0" spacing="20.0" BorderPane.alignment="CENTER" />
                           </bottom>
                        </BorderPane>
                     </content>
                  </Tab>
                  <Tab text="Ratios">
                     <content>
                        <BorderPane fx:id="mainBorderPane1">
                           <top>
                              <HBox fx:id="hboxRatios" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
                           </top>
                        </BorderPane>
                     </content>
                  </Tab>
                  <Tab fx:id="tabScore" text="Score">
                     <content>
                        <BorderPane fx:id="mainBorderPane">
                           <center>
                              <ScrollPane fx:id="mainScrollPane" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                                 <content>
                                    <Pane fx:id="mainPane" prefHeight="200.0" prefWidth="200.0" />
                                 </content>
                              </ScrollPane>
                           </center>
                           <left>
                              <VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0" BorderPane.alignment="CENTER">
                                 <children>
                                    <Label text="Filters" />
                                    <CheckBox mnemonicParsing="false" text="Melody" />
                                    <CheckBox mnemonicParsing="false" text="Rhythm" />
                                    <Label text="TO-DO Opacidad, posiciÃ³n" />
                                 </children>
                                 <padding>
                                    <Insets left="10.0" top="10.0" />
                                 </padding>
                              </VBox>
                           </left>
                        </BorderPane>
                     </content>
                  </Tab>
                  <Tab fx:id="tabMotives" onSelectionChanged="#handleMotivesOpened" text="Motives" />
                <Tab text="Rhythm">
                  <content>
                    <AnchorPane fx:id="rhythmPane" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                  </content>
                </Tab>
                <Tab text="Harmony">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                  </content>
                </Tab>
                  <Tab text="All together">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                    </content>
                  </Tab>
                  <Tab text="Spiral Array">
                     <content>
                        <AnchorPane fx:id="spiralArrayPane" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                     </content>
                  </Tab>
                  <Tab fx:id="tabMotives1" onSelectionChanged="#handleMotivesOpened" text="Color wheel">
                     <content>
                        <AnchorPane fx:id="colorWheelPane" prefHeight="200.0" prefWidth="200.0">
                           <children>
                              <ScrollPane fitToHeight="true" fitToWidth="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                 <content>
                                    <FlowPane fx:id="flowPaneColorWheels" prefHeight="200.0" prefWidth="200.0" />
                                 </content>
                              </ScrollPane>
                           </children>
                        </AnchorPane>
                     </content>
                  </Tab>
                  <Tab fx:id="tabMotives2" onSelectionChanged="#handleMotivesOpened" text="Color sum">
                     <content>
                        <AnchorPane fx:id="colorSumPane" prefHeight="200.0" prefWidth="200.0" />
                     </content>
                  </Tab>
                  <Tab fx:id="tabMotives3" onSelectionChanged="#handleMotivesOpened" text="Note colors">
                     <content>
                        <AnchorPane fx:id="noteColorsPane" prefHeight="200.0" prefWidth="200.0" />
                     </content>
                  </Tab>
              </tabs>
            </TabPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
