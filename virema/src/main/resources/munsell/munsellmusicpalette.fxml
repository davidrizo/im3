<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<TabPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.easda.virema.munsell.MunsellMusicPaletteController">
   <tabs>
      <Tab text="Full palette">
         <content>
            <BorderPane>
               <center>
                  <ScrollPane>
                     <content>
                        <VBox fx:id="vBox" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="2000.0" />
                     </content>
                  </ScrollPane>
               </center>
               <top>
                  <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                     <items>
                        <Label text="C" />
                        <Slider fx:id="sliderC" blockIncrement="1.0" majorTickUnit="1.0" max="20.0" minorTickCount="1" prefHeight="38.0" prefWidth="1171.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="2.0" />
                        <CheckBox fx:id="cbMaximumPossibleC" mnemonicParsing="false" onAction="#handleChangeMaximumC" selected="true" text="Maximum possinble C for each L" />
                     </items>
                  </ToolBar>
               </top>
            </BorderPane>
         </content>
      </Tab>
      <Tab text="Intervals">
        <content>
            <BorderPane>
               <center>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ScrollPane layoutX="35.0" layoutY="14.0" prefHeight="2000.0" prefWidth="2000.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <content>
                              <VBox fx:id="vboxIntervals" prefHeight="200.0" prefWidth="100.0" spacing="10.0" />
                           </content>
                        </ScrollPane>
                     </children>
                  </AnchorPane>
               </center>
               <top>
                  <ToolBar fx:id="toolbarOctaves" prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
               </top>
               <bottom>
                  <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <items>
                        <Label text="CLICK ON RECTANGLES TO PLAY" textFill="RED">
                           <font>
                              <Font name="Arial Black" size="13.0" />
                           </font>
                        </Label>
                        <Label text="Width" />
                        <Slider fx:id="sliderWidth" max="250.0" min="50.0" prefHeight="16.0" prefWidth="744.0" value="50.0" />
                    </items>
                  </ToolBar>
               </bottom>
            </BorderPane>
        </content>
      </Tab>
   </tabs>
</TabPane>
